@model SportSections.Models.Departament

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Departament</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DepartamentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<h4>Groups of departament</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Groups.First().GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Groups.First().CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Groups.First().Departament)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Groups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departament.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Groups" asp-route-id="@item.GroupId">Edit</a> |
                    <a asp-action="Details" asp-controller="Groups" asp-route-id="@item.GroupId">Details</a> |
                    <a asp-action="Delete" asp-controller="Groups" asp-route-id="@item.GroupId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
