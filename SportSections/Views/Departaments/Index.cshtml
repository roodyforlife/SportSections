                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartamentId">Edit</a> |
