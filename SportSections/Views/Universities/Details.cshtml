@model SportSections.Models.University

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>University</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UniversityId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h4>Faculties of university</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Faculties.First().ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculties.First().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculties.First().University)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Faculties)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.University.ShortName)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Faculties" asp-route-id="@item.FacultyId">Edit</a> |
                    <a asp-action="Details" asp-controller="Faculties" asp-route-id="@item.FacultyId">Details</a> |
                    <a asp-action="Delete" asp-controller="Faculties" asp-route-id="@item.FacultyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>